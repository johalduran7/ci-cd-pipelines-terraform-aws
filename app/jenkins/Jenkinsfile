pipeline {
    agent any
    environment {
        AWS_REGION = 'us-east-1'
        ANSIBLE_INVENTORY = 'aws_ec2.yml'
        APP_REPO = 'https://github.com/your-repo/your-node-app.git'
    }
    stages {
        stage('Provision Infrastructure') {
            steps {
                script {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                }
            }
        }
        
        stage('Configure with Ansible') {
            steps {
                script {
                    sh 'ansible-playbook -i $ANSIBLE_INVENTORY playbook.yml'
                }
            }
        }

        stage('Deploy App') {
            steps {
                script {
                    // You can trigger additional steps here if needed, such as pulling new code or restarting the app
                    echo 'App deployed!'
                }
            }
        }
    }
}
